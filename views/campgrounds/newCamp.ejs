<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Create a new campground</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Campground Name" name="campname">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="price" min="5" step="0.01" name="campprice">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Campground Image" name="campimg">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Campground Description" name="campdesc">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Create this campground!</button>
				</div>
				
			</form>
			<a href="/campgrounds">Go Back</a>
			</div>
	</div>
</div>

<%- include("../partials/footer") %>