<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit <%= campground.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" value="<%= campground.name %>" name="campground[campname]">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%= campground.name %>" min="5" step="0.01" name="campground[campprice]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= campground.image %>" name="campground[campimg]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= campground.description %>" name="campground[campdesc]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Edit this campground!</button>
				</div>
				
			</form>
			<a href="/campgrounds">Go Back</a>
			</div>
	</div>
</div>

<%- include("../partials/footer") %>